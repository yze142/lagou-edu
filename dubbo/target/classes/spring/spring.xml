<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://code.alibabatech.com/schema/dubbo
       http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

     <!--1.服务提供方在zookeeper的别名-->
    <dubbo:application  name="dubbo"/>
    <!--2.注册中心的地址-->
  <dubbo:registry address="zookeeper://192.168.58.132:2181"/>
    <!--3.扫描类（将什么包下的类作为提供类）-->
  <dubbo:annotation package="service.impl"/>

    <!-- 让监控 去注册中心 自动找服务 -->
<!--<dubbo:monitor protocol="registry"/>-->
    <!--版本声明-->
  <dubbo:service interface="service.HelloService" class="service.impl.HelloServiceImpl" version="1.0.0"></dubbo:service>
  <dubbo:service interface="service.HelloService" class="service.impl.HelloServiceImpl2" version="2.0.0"></dubbo:service>

</beans>